<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp">
        <androidx.constraintlayout.widget.ConstraintLayout
            app:layout_constraintDimensionRatio="H, 1:1"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:id="@+id/panelCamera"
            android:layout_width="0dp"
            android:layout_height="0dp">
            <com.priyankvasa.android.cameraviewex.CameraView
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:id="@+id/imageKendaraan"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:adjustViewBounds="true"
                android:keepScreenOn="true"
                app:aspectRatio="1:1"
                app:autoFocus="auto"
                app:awb="auto"
                app:cameraMode="single_capture"
                app:continuousFrameSize="W1440,1440"
                app:facing="back"
                app:flash="auto"
                app:jpegQuality="high"
                app:noiseReduction="high_quality"
                app:opticalStabilization="true"
                app:outputFormat="jpeg"
                app:pinchToZoom="true"
                app:shutter="short_time"
                app:singleCaptureSize="1080,H1080"
                app:zsl="true" />
            <androidx.appcompat.widget.AppCompatImageButton
                android:id="@+id/btnTakePicture"
                android:layout_margin="5dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:src="@drawable/ic_take_picture"
                android:layout_width="50dp"
                android:layout_height="50dp"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:visibility="gone"
            app:layout_constraintDimensionRatio="H, 1:1"
            android:id="@+id/panelImage"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_width="0dp"
            android:layout_height="0dp">
            <com.mhandharbeni.e_parking.views.CustomImageView
                app:customAspectRatio="1"
                app:customAspectRatioEnabled="true"
                app:customDominantMeasurement="width"
                android:adjustViewBounds="true"
                android:scaleType="centerInside"
                android:id="@+id/imagePreview"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:src="@mipmap/ic_launcher"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:contentDescription="@string/todo" />
            <androidx.appcompat.widget.AppCompatImageButton
                android:layout_margin="5dp"
                android:id="@+id/btnRetake"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:src="@drawable/ic_close"
                android:layout_width="50dp"
                android:layout_height="50dp"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
        <com.google.android.material.textfield.TextInputLayout
            app:layout_constraintTop_toBottomOf="@id/panelCamera"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:boxStrokeWidth="0dp"
            app:boxStrokeWidthFocused="0dp"
            app:boxCornerRadiusTopStart="0dp"
            app:boxCornerRadiusTopEnd="0dp"
            app:boxCornerRadiusBottomStart="8dp"
            app:boxCornerRadiusBottomEnd="8dp"
            android:minHeight="70dp"
            android:id="@+id/edtPlatNomor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:passwordToggleEnabled="false"
            app:endIconMode="clear_text"
            app:hintAnimationEnabled="true"
            android:maxEms="15"
            app:counterMaxLength="15"
            app:counterEnabled="true"
            android:hint="@string/plat_nomor">
            <com.google.android.material.textfield.TextInputEditText
                android:maxEms="15"
                android:lines="1"
                android:minHeight="50dp"
                android:inputType="text"
                android:textSize="15sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                />
        </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/labelMenu"
            android:text="@string/pilih_jenis_kendaraan"
            android:textStyle="bold"
            android:textSize="15sp"
            app:layout_constraintTop_toBottomOf="@id/edtPlatNomor"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <androidx.appcompat.widget.LinearLayoutCompat
            android:id="@+id/jenisKendaraan"
            android:orientation="vertical"
            app:layout_constraintTop_toBottomOf="@id/labelMenu"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <androidx.appcompat.widget.LinearLayoutCompat
                android:weightSum="1"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <com.google.android.material.button.MaterialButton
                    android:layout_margin="5dp"
                    android:id="@+id/typeMotor"
                    android:drawableTop="@mipmap/ic_launcher"
                    android:layout_weight="0.5"
                    android:text="@string/motor"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                <com.google.android.material.button.MaterialButton
                    android:layout_margin="5dp"
                    android:id="@+id/typeMobil"
                    android:drawableTop="@mipmap/ic_launcher"
                    android:layout_weight="0.5"
                    android:text="@string/mobil"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </androidx.appcompat.widget.LinearLayoutCompat>
            <androidx.appcompat.widget.LinearLayoutCompat
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <com.google.android.material.button.MaterialButton
                    android:layout_margin="5dp"
                    android:id="@+id/typeBusMini"
                    android:drawableTop="@mipmap/ic_launcher"
                    android:layout_weight="0.5"
                    android:text="@string/bus_mini"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                <com.google.android.material.button.MaterialButton
                    android:layout_margin="5dp"
                    android:id="@+id/typeBusBesar"
                    android:drawableTop="@mipmap/ic_launcher"
                    android:layout_weight="0.5"
                    android:text="@string/bus_besar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </androidx.appcompat.widget.LinearLayoutCompat>
        </androidx.appcompat.widget.LinearLayoutCompat>
    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
